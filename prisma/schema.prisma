generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Khách hàng
model Customer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  maKH        String   @unique // Mã khách hàng
  name        String
  email       String?
  phone       String
  source      String   // FB, IG, Website, etc.
  address     String?
  gender      Gender?  // Giới tính
  title       String?  // Danh xưng
  country     String?  // Quốc gia
  dateOfBirth DateTime? // Ngày sinh
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings    Booking[]
}

// Tour
model Tour {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  type        TourType // GROUP, PRIVATE, ONE_ON_ONE
  maxGuests   Int
  price       Float
  startDate   DateTime
  endDate     DateTime
  status      TourStatus // UPCOMING, ONGOING, COMPLETED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings    Booking[]
  expenses    Expense[]
}

// Booking
model Booking {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  customerId  String       @db.ObjectId
  tourId      String       @db.ObjectId
  deposit     Float
  totalPrice  Float
  status      BookingStatus // PENDING, CONFIRMED, CANCELLED
  notes       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  customer    Customer     @relation(fields: [customerId], references: [id])
  tour        Tour         @relation(fields: [tourId], references: [id])
  guests      Guest[]
  services    BookingService[]
}

// Chi tiết dịch vụ trong booking (lưu giá của dịch vụ "Liên hệ" và custom services)
model BookingService {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  bookingId     String   @db.ObjectId
  serviceId     String?  @db.ObjectId  // ID từ TourInfo (null nếu là custom service)
  serviceName   String   // Tên dịch vụ
  price         Float    // Giá đơn vị
  quantity      Int      // Số lượng
  isCustom      Boolean  @default(false) // true nếu là dịch vụ bổ sung (custom)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  booking       Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@map("booking_services")
}

// Guest details for each booking
model Guest {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  bookingId  String   @db.ObjectId
  name       String
  phone      String
  serviceId  String?  // ID of service from TourInfo (optional for catalog services)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  booking    Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([name, phone])
}

// Chi phí
model Expense {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  tourId      String       @db.ObjectId
  type        ExpenseType  // TOUR_COST, PARTNER, GUIDE, STAFF
  amount      Float
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  tour        Tour         @relation(fields: [tourId], references: [id])
}

// Thông tin tour từ CSV
model TourInfo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  stt         Int      // STT trong file CSV
  tenTour     String   // Tên Tour
  dichVu      String   // Dịch vụ
  gia         String   // Giá (để String vì có "Liên hệ")
  ghiChu      String?  // Ghi chú
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tour_info")
}

// Enums
enum Gender {
  MALE    // Nam
  FEMALE  // Nữ
}

enum TourType {
  GROUP      // Tour ghép đoàn
  PRIVATE    // Tour private
  ONE_ON_ONE // Tour 1-1
}

enum TourStatus {
  UPCOMING   // Sắp diễn ra
  ONGOING    // Đang diễn ra
  COMPLETED  // Hoàn thành
}

enum BookingStatus {
  PENDING    // Chờ xác nhận
  CONFIRMED  // Đã xác nhận
  CANCELLED  // Đã hủy
}

enum ExpenseType {
  TOUR_COST  // Chi phí tour
  PARTNER    // Chi phí đối tác
  GUIDE      // Chi phí HDV
  STAFF      // Chi phí nhân viên
}